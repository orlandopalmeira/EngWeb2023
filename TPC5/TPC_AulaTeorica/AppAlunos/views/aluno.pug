extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Aluno #{a.id}
    
    .w3-container
      ul.w3-ul.w3-card-4(style="width:50%")
        li #[b Nome: ]
          | #{a.nome} 
        li #[b NÃºmero: ]
          | #{a.id}
        li #[b GitLink: ]
          a(href=a.gitlink)= a.gitlink
      .w3-row
        each tpc in ['tpc1','tpc2','tpc3','tpc4','tpc5','tpc6','tpc7','tpc8']
          if tpc in a
            if a[tpc] == "1"
              input.w3-check(type="checkbox", checked="checked")
              label.w3-margin-right= tpc
            else
              input.w3-check(type="checkbox")
              label.w3-margin-right= tpc
          else
            input.w3-check(type="checkbox")
            label.w3-margin-right= tpc
      